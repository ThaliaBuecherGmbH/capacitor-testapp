{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": ["node", "webdriverio/sync", "@wdio/mocha-framework"]
  },
  "include": ["./config/**/*.ts", "./tests/**/*.ts"]
}
